<mvc:View controllerName="logaligroup.employees.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox >
                            <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin" />
                            <Input id="inputEmployee" maxLength="10" value="{/employeeId}" width="200px" class="sapUiSmallMarginEnd"  />
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"  />
                            <Select id="slCountry" forceSelection="false" visible="true" items="{/listCountry}" selectedKey="{/countryKey}" >
                                <items>
                                    <core:Item key="{key}" text="{text}" />
                                    
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>BtnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd" />
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd" />
                        </HBox>
                        <HBox >
                            <Panel>
                                <Table id="tableEmployee" items="{/employees}" >
                                    <columns>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableId}"></Label>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableName}"></Label>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableCountry}"></Label>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableCity}"></Label>
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showPostalCode" >
                                            <cells>
                                                <Label text="{EmployeeID}" />
                                                <Label text="{LastName}, {FirstName}" />
                                                <Label text="{Country}" />
                                                <Label text="{City}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
